@model PoliziaMunicipale.Models.Trasgressore

@{
    ViewBag.Title = "Create";
}


<h4 class="text-center">Lista Trasgressori</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CAP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CF)
        </th>
        <th></th>
    </tr>

    @foreach (PoliziaMunicipale.Models.Trasgressore item in ViewBag.AllTrasgressori)
    {
        <tr>
            <td>
                #@item.Id
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Address
            </td>
            <td>
                @item.City
            </td>
            <td>
                @item.CAP
            </td>
            <td>
                @item.CF
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>