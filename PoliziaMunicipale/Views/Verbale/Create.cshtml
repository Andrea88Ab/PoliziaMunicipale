@model PoliziaMunicipale.Models.Verbale

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Aggiungi Verbale";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" asp-controller="Verbale" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DataViolazione"></label>
                    <input asp-for="DataViolazione" class="form-control" type="date" />
                    <span asp-validation-for="DataViolazione" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IndirizzoViolazione"></label>
                    <input asp-for="IndirizzoViolazione" class="form-control" />
                    <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Agente"></label>
                    <input asp-for="Agente" class="form-control" />
                    <span asp-validation-for="Agente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataVerbale"></label>
                    <input asp-for="DataVerbale" class="form-control" type="date" />
                    <span asp-validation-for="DataVerbale" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Importo"></label>
                    <input asp-for="Importo" class="form-control" />
                    <span asp-validation-for="Importo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PuntiTolti"></label>
                    <input asp-for="PuntiTolti" class="form-control" />
                    <span asp-validation-for="PuntiTolti" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdTrasgressore">Trasgressore</label>
                    <select asp-for="IdTrasgressore" asp-items="@(new SelectList(ViewBag.ListaTrasgressori, "Value", "Text"))" class="form-control">
                        <option value="">Seleziona Trasgressore</option>
                    </select>
                    <span asp-validation-for="IdTrasgressore" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdViolazione">Violazione</label>
                    <select asp-for="IdViolazione" asp-items="@(new SelectList(ViewBag.ListaViolazioni, "Value", "Text"))" class="form-control">
                        <option value="">Seleziona Violazione</option>
                    </select>
                    <span asp-validation-for="IdViolazione" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Crea</button>
                </div>
            </form>
        </div>
    </div>
</div>
